	<record id="view_sri_107_tree" model="ir.ui.view">
	  <field name="name">Formulario 107 - tree</field>
	  <field name="model">sri.107</field>
	  <field name="type">tree</field>
	  <field name="arch" type="xml">
	    <tree string="Formulario 107">
	      <field name="name"/>
	      <field name="codigo"/>
	      <field name="field_202"/>
	      <field name="field_102"/>
	      <field name="field_103"/>
	      <field name="state"/>
	    </tree>
	  </field>
	</record>
	
	<record id="view_sri_107_search" model="ir.ui.view">
          <field name="name">Formulario 107 - search</field>
          <field name="model">sri.107</field>
          <field name="type">search</field>
          <field name="arch" type="xml">
            <search string="Formulario 107">
              <group col='4' colspan='4'>
                <filter icon="gtk-edit" name="state_draft" string="Borrador" domain="[('state','=','draft')]"/>
                <filter icon="gtk-file" name="state_done" string="Aprobado" domain="[('state','=','done')]"/>
                <filter icon="gtk-cancel" name="state_cancel" string="Cancelado" domain="[('state','=','cancel')]"/>
                <newline/>
                <!--separator orientation="vertical"/-->
                <field name="name" string="Descripcion"/>
                <field name="codigo" string="Numero"/>
                <field name="field_202" string="Empleado"/>
                <field name="field_102" string="Ejercicio Fiscal"/>
                <separator orientation="vertical"/>
                <field name="field_103" string="Fecha"/>
              </group>
              <newline/>
	      <group expand="1" string="Agrupar por..." colspan="4" col="10">
		<filter name="group_employee" string="Empleado" icon="terp-personal" context="{'group_by':'field_202'}"/>
		<filter name="group_fiscal" string="Ejercicio Fiscal" icon="terp-partner" context="{'group_by':'field_102'}"/>
		<filter name="group_state" string="Estado" icon="terp-stock_symbol-selection" context="{'group_by':'state'}"/>
              </group>
            </search>
          </field>
        </record>
    	
	<record id="view_sri_107_form" model="ir.ui.view">
	  <field name="name">Formulario 107</field>
	  <field name="model">sri.107</field>
	  <field name="type">form</field>
	  <field name="arch" type="xml">
	    <form string="Formulario 107">
	      <group col="4" colspan="4">
		<field name="archivo" colspan="4" filename='name'/>
		<field name="name" colspan="4" readonly="1" invisible="1"/>
		<field name="codigo" colspan="2" readonly="1"/>
		<group>
		  <field name="state" colspan="2" readonly="1"/>
		  <button name="regenerar_exportar" string="Regenerar Archivo" icon="gtk-execute" type="object" colspan="1" states="draft"/>
		  <button name="aprobar" string="Aprobar Formulario" colspan="1" icon="gtk-ok" type="object" states="draft"/>
		  <!--button name="cancelar" string="Cancelar Formulario" colspan="1" icon="gtk-cancel" type="object"/-->
		</group>
		<newline/>
		<separator colspan="4" string="200 Identificaci贸n del empleado contribuyente"/>
		<field name="field_202" colspan="2" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
		<field name="field_201" colspan="2" readonly="1"/>
		<!--separator colspan="2" string="Formulario 107"/-->
		<newline/>
		<field name="field_102" colspan="2" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
		<field name="field_103" colspan="2" readonly="1"/>
		<separator colspan="3"/>
		
		<button name="calcular_exportar" string="Calcular" icon="gtk-ok" type="object" colspan="1" states="draft"/>
		<newline/>
		
		<separator colspan="4" string="Identificaci贸n del Empleador (Agente de Retenci贸n)"/>
		<field name="field_105" colspan="2" readonly="1"/>
		<field name="field_106" colspan="2" readonly="1"/>
		<newline/>
		<separator string="Liquidaci贸n del Impuesto" colspan="4"/>
		<field name="field_301" colspan="4"/>
		<field name="field_303" colspan="4"/>
		<field name="field_305" colspan="4"/>
		<field name="field_307" colspan="4"/>
		<field name="field_311" colspan="4"/>
		<field name="field_313" colspan="4"/>
		<field name="field_315" colspan="4"/>
		<field name="field_317" colspan="4"/>
		<field name="field_351" colspan="4"/>
		<field name="field_353" colspan="4"/>
		<field name="field_361" colspan="4"/>
		<field name="field_363" colspan="4"/>
		<field name="field_365" colspan="4"/>
		<field name="field_367" colspan="4"/>
		<field name="field_369" colspan="4"/>
		<field name="field_371" colspan="4"/>
		<field name="field_373" colspan="4"/>
		<field name="field_381" colspan="4"/>
		<field name="field_399" colspan="4" string="Base Imponible Gravada(301+303+305+307-351-353-361-363-365-367-369-371-373+381)"/>
		<field name="field_401" colspan="4"/>
		<field name="field_403" colspan="4"/>
		<field name="field_405" colspan="4"/>
		<field name="field_407" colspan="4"/>
		<field name="field_349" colspan="4" string="Ingresos Gravados con este empleador (301+303+305+381)"/>
		<group colspan="4">
		  <field name="detalle" colspan="4" readonly="1"/>
		</group>
		<!--group colspan="4">
		    <button name="print_107" string="Generar Archivo" icon="gtk-ok" type="object" colspan="2"/>
		    
		    </group-->
	      </group>
	    </form>
	  </field>
	</record>
	
