<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

      <!-- Flujo del registro quincenal -->

        <record model="workflow" id="he_flow">
            <field name="name">he.wkf.register</field>
            <field name="osv">hr.he.register</field>
            <field name="on_create">True</field>
        </record>

        <record id="act_draft" model="workflow.activity">
            <field name="wkf_id" ref="he_flow"/>
            <field name="flow_start">True</field>
            <field name="name">draft</field>
	    <!--field name="action">wkf_draft()</field-->
        </record>

        <record id="act_validar" model="workflow.activity">
            <field name="wkf_id" ref="he_flow"/>
            <field name="name">validate</field>
            <field name="kind">function</field>
            <field name="action">wkf_draft_validar()</field>
            <field name="split_mode">OR</field>
        </record>

        <record id="act_terminar" model="workflow.activity">
            <field name="wkf_id" ref="he_flow"/>
            <field name="name">done</field>
            <field name="kind">function</field>
	    <field name="flow_stop">True</field>
            <field name="action">wkf_validar_terminar()</field>
        </record>

        <record id="act_cancelar" model="workflow.activity">
            <field name="wkf_id" ref="he_flow"/>
            <field name="name">cancel</field>
            <field name="kind">function</field>
            <field name="action">wkf_validar_cancelar()</field>
        </record>

        <record id="trans_draft_validado" model="workflow.transition">
          <field name="act_from" ref="act_draft"/>
          <field name="act_to" ref="act_validar"/>
          <field name="signal">he_draft_validar</field>
        </record>

        <record id="trans_validado_terminado" model="workflow.transition">
          <field name="act_from" ref="act_validar"/>
          <field name="act_to" ref="act_terminar"/>
          <field name="signal">he_validar_terminar</field>
        </record>

        <record id="trans_validado_cancelar" model="workflow.transition">
          <field name="act_from" ref="act_validar"/>
          <field name="act_to" ref="act_cancelar"/>
          <field name="signal">he_validar_cancelar</field>
        </record>

	<record id="trans_cancelar_validado" model="workflow.transition">
          <field name="act_from" ref="act_cancelar"/>
          <field name="act_to" ref="act_validar"/>
          <field name="signal">he_cancelar_validar</field>
        </record>

    </data>
</openerp>
