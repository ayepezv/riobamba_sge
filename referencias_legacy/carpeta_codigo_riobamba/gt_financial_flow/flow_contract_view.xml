<?xml version="1.0"?>
<openerp>
    <data>

      <record model="ir.ui.view" id="view_contract_payment_line_search">
	<field name="name">Buscar</field>
	<field name="model">contract.payment.line</field>
	<field name="type">search</field>
	<field name="arch" type="xml">
	  <search string="Pagos Contratos">
	    <group>
	      <field name="contract_id"/>
	      <field name="num"/>
	      <field name="partner_id"/>
	      <field name="date"/>    
	      <field name="amount"/>		  				               
	    </group>
	    <newline/>
	    <group expand="1" string="Group By...">                        
	      <filter string="Contratista" icon="terp-crm"  context="{'group_by':'partner_id'}"/>
	      <filter string="Contrato" icon="terp-stock_effects-object-colorize" context="{'group_by':'contract_id'}"/>
              <filter string="Fecha" context="{'group_by':'date'}"/>          
	    </group>
	  </search>
	</field>
      </record>
      

      <record model="ir.ui.view" id="view_contract_payment_line_tree">
	<field name="name">contract.payment.line.tree</field>
	<field name="model">contract.payment.line</field>
	<field name="type">tree</field>
	<field name="arch" type="xml">
	  <tree>
	    <field name="contract_id"/>
	    <field name="num"/>
	    <field name="partner_id"/>
	    <field name="date"/>
	    <field name="amount"/>
	  </tree>
	</field>
      </record>
      
      <record id="action_contract_flow_report_tree" model="ir.actions.act_window">
	<field name="name">Contratos</field>
	<field name="type">ir.actions.act_window</field>
	<field name="res_model">contract.payment.line</field>
	<field name="view_type">form</field>
	<field name="view_mode">tree,form</field>
	<field name="search_view_id" ref="view_contract_payment_line_search"/>
	<field name="view_id" ref="view_contract_payment_line_tree"/>
      </record>
      
      <menuitem name="Flujos Efectivo" id="menu_cash_flow" parent="account.menu_finance"/>

      <menuitem id="menu_contract_flow" name="Contratos"
		parent="menu_cash_flow"
		action="action_contract_flow_report_tree"/>
      
      
</data>      
</openerp>