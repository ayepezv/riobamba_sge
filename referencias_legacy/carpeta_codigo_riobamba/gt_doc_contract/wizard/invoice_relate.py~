import time
from osv import fields, osv

class cancelProcess(osv.TransientModel):

    _name = "cancel.process"

    _columns = dict(
        name = fields.char('Observaciones', size=256,required=True),
        )

    def cancel_process(self, cr, uid, ids, context=None):
        active_id = context['active_id']
        req_obj = self.pool.get('purchase.requisition')
        budget_obj = self.pool.get('crossovered.budget.certificate')
        req = req_obj.browse(cr, uid, active_id)
        this = self.browse(cr, uid, ids[0])
        obs = this.name
        req_obj.write(cr, uid, req.id,{'observation':obs,
                                       'state':'cancel',
                                       'anulant_id':uid,
                                       })
        budget_obj.write(cr, uid, req.presp_ref.id, {'is_lock':False})
        req_obj._generate_log(cr, uid, active_id,'X Anulada')
        task_id= self.pool.get('doc_expedient.task').create(cr, uid,{'other_action_chk': True,
                                                                     'other_action' : 'X Anulado' ,
                                                                     'description': 'Servidor: ' + req.solicitant_id.name + ' ' + str(req.solicitant_id.employee_lastname),
                                                                     'department': req.department_id.id,
                                                                     'employee_id' : req.solicitant_id.id,
                                                                     'job_id': req.solicitant_id.job_id.id,
                                                                     'user_id': uid,
                                                                     'expedient_id':req.sgd_id.id,
                                                                     'state': 'done',
                                                                     }, context=context)
        return {'type': 'ir.actions.act_window_close'}

cancelProcess()
