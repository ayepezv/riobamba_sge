<?xml version="1.0" ?>
<openerp>
    <data>
        <!--Export edi document  -->
        <record id="ir_actions_server_edi_contract" model="ir.actions.server">
            <field name="code">object.edi_export_and_email(template_ext_id='gt_doc_contract.email_template_edi_contract', context=context)</field>
	    	<field eval="7" name="sequence"/>
            <field name="state">code</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="gt_doc_contract.model_doc_contract_contract"/>
            <field name="condition">True</field>
            <field name="name">Auto-email stage change contracts</field>
        </record>

        <!-- EDI related Email Templates menu -->
        <record model="ir.actions.act_window" id="action_email_templates_contracts">
            <field name="name">Plantilla Email Contratos</field>
            <field name="res_model">email.template</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="email_template.email_template_tree"/>
            <field name="search_view_id" ref="email_template.view_email_template_search"/>
            <field name="context">{'search_default_model_id':'doc_contract.contract'}</field>
	    	<field name="context" eval="{'search_default_model_id': ref('gt_doc_contract.model_doc_contract_contract')}"/>
        </record>
        <menuitem id="menu_email_templates_contracts" 
        	      parent="menu_doc_contract_configuration" 
        	      action="action_email_templates_contracts"
        	      groups="gt_document_manager.group_doc_manager" 
        	      sequence="15"/>
    </data>

    <!-- Mail template and workflow bindings are done in a NOUPDATE block
         so users can freely customize/delete them -->
    <data noupdate="1">

        <!--Email template -->
        <record id="email_template_edi_purchase" model="email.template">
            <field name="name">Gestión de Contratos</field>
            <field name="email_from">${object.user_id.user_email or ''}</field>
            <field name="subject">${object.name} Notificación de asignación de Administrador de Contrato (Ref ${object.name or 'n/a' })</field>
            <field name="email_to">${object.admin_uid.user_email}</field>
            <field name="model_id" ref="gt_doc_contract.model_doc_contract_contract"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[
<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">

    <p>Estimado:${object.admin_uid.name and ' ' or ''},</p>
    <p>Ud ha sido designado como Administrador del contrato: ${object.name}</p>
    
    <p style="border-left: 1px solid #8e0000; margin-left: 30px;">
       &nbsp;&nbsp;<strong>NOTIFICACION DE ADMINISTRACIÓN DE CONTRATO</strong><br/>
       &nbsp;&nbsp;Codigo Contrato: <strong>${object.code}</strong><br />      
    </p>

</div>
	
            ]]></field>
        </record>
    </data>
</openerp>
