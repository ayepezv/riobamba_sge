<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="view_warranty_type_form" model="ir.ui.view">
      <field name="name">view.warranty.type.form</field>
      <field name="model">warranty.type</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Tipo de Garantía">
          <field name="name"/>
          <field name="amount"/>
          <field name="inclusive"/>
          <field name="advance"/>
        </form>
      </field>
    </record>

    <record id="view_warranty_type_tree" model="ir.ui.view">
      <field name="name">view.warranty.type.tree</field>
      <field name="model">warranty.type</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <tree string="Tipos de Garantías">
          <field name="name"/>
          <field name="amount"/>
          <field name="inclusive"/>
          <field name="advance"/>
        </tree>
      </field>
    </record>
    
    <record model="ir.actions.act_window" id="action_warranty_type_form">
        <field name="name">Garantías de Contratos</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">warranty.type</field>
        <field name="view_type">form</field>
    </record>	    
        
    <!-- Compania -->
    
    <record id="view_res_company_warranty_form" model="ir.ui.view">
      <field name="name">account.res.company.warranty.form</field>
      <field name="model">res.company</field>
      <field name="inherit_id" ref="base.view_company_form"/>
      <field name="arch" type="xml">
	<field name="company_registry" position="after">
	  <field name="warranty_days_due"/>
	</field>
      </field>
    </record>

  </data>
</openerp>
