<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

<!-- WIZARD FROM OBJ
-->
    <record id="view_import_sheet_wizard" model="ir.ui.view">
      <field name="name">Importar Hoja</field>
      <field name="model">import.sheet</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
	<form string="Importar Hoja">	 
	  <group col="4" colspan="4">
	    <label colspan="4" nolabel="1" string="Este wizard le permite importar una hoja de excel (.xls). El formato debe ser: Nombre - cedula - valor"/>
	    <group colspan="4">
	      <field name="archivo"/>
	    </group>
	    <newline/>	   
	    <group col="3" colspan="1">
	      <button icon="gtk-cancel" special="cancel" string="Cancel"/>
	      <button name="import_sheet_" string="Importar" colspan="1" type="object" icon="gtk-execute"/>
	    </group>
	  </group>
	</form>
      </field>
    </record>

    <act_window
       id="act_import_sheet"
       name="Importar Hoja"
       res_model="import.sheet"
       view_mode="form"
       target="new"
       src_model="hr.ie.head"/>

<!-- EXPORT XLS
-->
    <record id="view_export_sheet_wizard" model="ir.ui.view">
      <field name="name">Exportar Hoja</field>
      <field name="model">export.sheet</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
	<form string="Exportar Hoja">	 
	  <group col="4" colspan="4">
	    <label colspan="4" nolabel="1" string="Este wizard le permite exportar una hoja de excel (.xls)"/>
	    <group colspan="4">
	      <field name="name"/>
	      <field name="archivo"/>
	    </group>
	    <newline/>	   
	    <group col="3" colspan="1">
	      <button icon="gtk-cancel" special="cancel" string="Cancel"/>
	      <button name="exportar_emp" string="Exportar" colspan="1" type="object" icon="gtk-execute"/>
	    </group>
	  </group>
	</form>
      </field>
    </record>

