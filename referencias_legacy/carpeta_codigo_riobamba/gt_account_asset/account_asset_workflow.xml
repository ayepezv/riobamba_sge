<openerp>
    <data>
<record id="account.act_open" model="workflow.activity">
            <field name="wkf_id" ref="account.wkf"/>
            <field name="name">open</field>
            <field name="action">action_date_assign()
action_budget_apply()
action_move_create()
action_number()
action_retention_create()
create_asiento_complementario()
write({'state':'open'})</field>
            <field name="kind">function</field>
        </record>        
        <record id="account.act_cancel" model="workflow.activity">
            <field name="wkf_id" ref="account.wkf"/>
            <field name="name">cancel</field>
            <field name="flow_stop">True</field>
            <field name="action">action_cancel()
action_retention_cancel()
delete_asiento_complementario()
write({'state':'cancel'})</field>
            <field name="kind">function</field>
        </record>        

        <record id="wkf_asset_transf" model="workflow">
            <field name="name">account.asset.transf</field>
            <field name="osv">account.asset.transf</field>
            <field name="on_create">True</field>
        </record>

        <record id="act_draft" model="workflow.activity">
            <field name="wkf_id" ref="wkf_asset_transf"/>
            <field name="flow_start">True</field>
	    <field name="action">write({'state': 'draft'})</field>
            <field name="name">draft</field>
        </record>

        <record id="act_confirm" model="workflow.activity">
            <field name="wkf_id" ref="wkf_asset_transf"/>
            <field name="name">confirm</field>
            <field name="action">asset_confirm()</field>
            <field name="kind">function</field>
        </record>

        <record id="act_cancel" model="workflow.activity">
            <field name="wkf_id" ref="wkf_asset_transf"/>
            <field name="name">cancel</field>
            <field name="action">write({'state': 'cancel'})</field>
            <field name="kind">function</field>
        </record>	

        <record id="t4" model="workflow.transition">
            <field name="act_from" ref="act_draft"/>
            <field name="act_to" ref="act_confirm"/>
            <field name="signal">transf_confirm</field>
            <field name="condition">True</field>
        </record>

        <record id="t9" model="workflow.transition">
            <field name="act_from" ref="act_confirm"/>
            <field name="act_to" ref="act_cancel"/>
            <field name="signal">transf_cancel</field>
            <field name="condition">True</field>
        </record>

        <record id="t10" model="workflow.transition">
            <field name="act_from" ref="act_cancel"/>
            <field name="act_to" ref="act_draft"/>
            <field name="signal">transf_set_draft</field>
            <field name="condition">True</field>
        </record>

    </data>
</openerp>
