      <record id="view_pagar_iess" model="ir.ui.view">
        <field name="name">Por Pagar Iess</field>
        <field name="model">pagar.iess</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
          <form string="Cuentas por pagar iess">
            <group col="4" colspan="4">
	      <group colspan="4">
		<field name="partner_id" colspan="4" readonly="1"/>
                <field name="date_start" colspan="2" required="1"/>
                <field name="date" colspan="2" required="1"/>
		<newline/>
		<field name="opc" colspan="2" required="1"/>
		<field name="bank_id" colspan="2" domain="[('type','=','bank')]"/>
		<field name="move_id" colspan="2" domain="[('partner_id','=',partner_id),('state','=','draft')]"
		       attrs="{'invisible': [('opc','=','NuevoComprobante')],'required': [('opc','!=','NuevoComprobante')]}"/>
	      </group>
	      <field name="cp_id" colspan="4" domain="[('partner_id','=',partner_id)]"/>
	      <group colspan="4">
		<button icon="gtk-cancel" special="cancel"
	        	string="Salir" />
		<button name="loadPagarIess" type="object" icon="gtk-execute"  string="Cargar CxP"/>
		<button name="pagarIess" type="object" icon="gtk-execute"  string="Pagar CxP"/>
		<button name="print_iess" type="object" icon="gtk-print"  string="Imprimir"/>
	      </group>
	      <field name="line_ids" nolabel="1" colspan="4">
		<tree string="Detalle" editable='bottom'>
		  <field name="move_id" readonly="1"/>
		  <field name="account_id" readonly="1"/>
		  <field name="budget_id" readonly="1"/>
		  <field name="monto" sum="Total" readonly="1"/>
		  <field name="saldo" sum="Total" readonly="1"/>
		  <field name="monto_pago" sum="Total"/>
		  <field name="pagar"/>
		</tree>
	      </field>
	    </group>
          </form>
        </field>
      </record>

