<?xml version="1.0"?>
<openerp>
    <data>
      <record id="view_account_asset_asset_vehicle_form" model="ir.ui.view">
      <field name="name">account.asset.asset.vehicle.form</field>
      <field name="model">account.asset.asset</field>
      <field name="type">form</field>      
      <field name="inherit_id" ref="gt_account_asset.view_account_asset_asset2_form"/>
      <field name="arch" type="xml">
      	<xpath expr="/form/notebook/page[@string='Propiedades']/field[@name='asset_property_ids']" position="after">
      		<newline/>
      		<field invisible='1' name="state_propiedades" />
      		<newline/>   
      		<group colspan="2" col="2" string="Propiedades del Vehiculo" attrs="{'invisible': [('state_propiedades', '=',False)]}">
      			<field name="marca_id" widget="selection" attrs="{'invisible': [('state_propiedades', '=',False)]}"/>
      			<field name="model_id" widget="selection" attrs="{'invisible': [('state_propiedades', '=',False)]}"/>   		
      			<field name="color_id" widget="selection" attrs="{'invisible': [('state_propiedades', '=',False)]}"/>      		       			      		      			
      		</group>     		
      	</xpath>
      	</field>
		</record>
    	
    	<record id="view_account_asset_asset_vehicle_form1" model="ir.ui.view">
      <field name="name">account.asset.asset.vehicle.form1</field>
      <field name="model">account.asset.asset</field>
      <field name="type">form</field>
      <field name="inherit_id" ref="gt_account_asset.view_account_asset_asset_form_no_depreciate"/>
      <field name="arch" type="xml">
      	<xpath expr="/form/notebook/page[@string='Propiedades']/field[@name='asset_property_ids']" position="after">
      		<newline/>
      		<field invisible='1' name="state_propiedades" />
      		<newline/>   
      		<group colspan="2" col="2" string="Propiedades del Vehiculo" attrs="{'invisible': [('state_propiedades', '=',False)]}">
      			<field name="marca_id" widget="selection" attrs="{'invisible': [('state_propiedades', '=',False)]}"/>
      			<field name="model_id" widget="selection" attrs="{'invisible': [('state_propiedades', '=',False)]}"/>   		
      			<field name="color_id" widget="selection" attrs="{'invisible': [('state_propiedades', '=',False)]}"/>      		       			      		      			
      		</group>     		
      	</xpath>
      	</field>
		</record>
    	
    	
    </data>
</openerp>
