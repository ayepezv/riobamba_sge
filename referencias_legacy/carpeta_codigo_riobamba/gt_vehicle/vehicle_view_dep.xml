<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    <record id="property_rule_movilization_order" model="ir.rule">
        <field name="name">Solicitudes Pendientes</field>
        <field model="ir.model" name="model_id" ref="model_movilization_order"/>
        <field name="domain_force">[('responsable_id.department_id', '=', user.context_department_id.id)]</field>
        <field name="groups" eval="[(6,0,[ref('gt_vehicle.group_vehicle_leader')])]"/>
    </record>
    
    <record id="property_rule_movilization_order_user" model="ir.rule">
        <field name="name">Solicitudes Pendientes</field>
        <field model="ir.model" name="model_id" ref="model_movilization_order"/>
        <field name="domain_force">[('responsable_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(6,0,[ref('gt_vehicle.group_vehicle_user')])]"/>
    </record>
</data>
</openerp>