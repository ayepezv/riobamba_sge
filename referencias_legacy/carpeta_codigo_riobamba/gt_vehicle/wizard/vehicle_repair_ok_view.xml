<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
  
	<record id="view_repair_vehicle_ok" model="ir.ui.view">
            <field name="name">Pasar a reparado el vehículo</field>
            <field name="model">vehicle.repair.ok.w</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
              	<form string="Asistente pasar el vehículo a reparado">				
            	<group colspan="4">
				   <field name="descripcion" required="1" colspan="4"/>
				</group>
              	   <separator  colspan="4" />
		           <button icon="gtk-cancel" special="cancel"
	        			string="Salir" />
				   <button name="vehicle_repair_ok" type="object" icon="gtk-ok" string="Pasar a Reparado" 
						confirm="¿Está seguro que desea pasar el vehículo a reparado"/>
			  	</form>
            </field>
		</record>  
	  
      
    <record id="action_repair_vehicle_ok" model="ir.actions.act_window">
	           <field name="name">Pasar a reparado el vehículo</field>
	           <field name="type">ir.actions.act_window</field>
	           <field name="res_model">vehicle.repair.ok.w</field>
	           <field name="view_type">form</field>
	           <field name="view_mode">form</field>
		       <field name="context">{'record_id' : active_id}</field>
	           <field name="target">new</field>
    	</record>   


</data>
</openerp>
