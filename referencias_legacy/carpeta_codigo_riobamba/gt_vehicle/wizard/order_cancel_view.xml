<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
  
	<record id="view_order_cancel" model="ir.ui.view">
            <field name="name">Anulación de Órden de Movilización</field>
            <field name="model">order.cancel</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
              	<form string="Anulación de Órden de Movilización">
				
            	<group colspan="4">
				   <field name="descripcion" required="1" colspan="4"/>
				</group>
              	   <separator  colspan="4" />
		           <button icon="gtk-cancel" special="cancel"
	        			string="Salir" />
				   <button name="order_cancel" type="object" icon="gtk-ok" string="Anular Órden de Movilización" />
			  	</form>
            </field>
		</record>  
	  
      
    <record id="action_order_cancel" model="ir.actions.act_window">
	           <field name="name">Anulación de Órden de Movilización</field>
	           <field name="type">ir.actions.act_window</field>
	           <field name="res_model">order.cancel</field>
	           <field name="view_type">form</field>
	           <field name="view_mode">form</field>
		       <field name="context">{'record_id' : active_id}</field>
	           <field name="target">new</field>
    	</record>   


</data>
</openerp>
