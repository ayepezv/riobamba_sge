<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

      <record id="view_update_km" model="ir.ui.view">
        <field name="name">Actualizar Kilometraje</field>
        <field name="model">vehicle.update.km</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
          <form string="Asistente para la actualización de kilometraje del vehículo">
			<label colspan="4" nolabel="1" string="Este asistente le permite actualizar el kilometraje de un vehículo"/>
            <group col="4" colspan="4">
			  <group string="Vehículo" colspan="4" col="6">
                <field name="vehicle_id" colspan="2" on_change="onchange_vehicle(vehicle_id)" domain="[('estado','!=','low')]" />
				<newline/>
				<field name="km_ant" colspan="2"/>
				<field name="km_new" colspan="2"/>
			  </group>
			  <newline/>
			  <group string="Observaciones" colspan="4">
				<field name="note" colspan="4" nolabel="1"/>
			  </group>
			  <newline/>
			  <group col="3" colspan="4">
				<button icon="gtk-cancel" special="cancel"
	        			string="Salir" />
				<button name="update_km" type="object" icon="gtk-execute"  string="Actualizar" 
						confirm="¿Esta seguro que desea modificar el kilometraje?"/>
			  </group>
			</group>
          </form>
        </field>
      </record>
	  

      <record id="action_update_km" model="ir.actions.act_window">
        <field name="name">Actualizar Kilometraje</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">vehicle.update.km</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
      </record>
      
      <menuitem id="menu_update_km"
		icon="STOCK_EXECUTE"
		action="action_update_km"
		parent="menu_vehicle_actions"
		name="Actualizar Kilometraje"/>


</data>
</openerp>
