<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
  
	<record id="view_repair_vehicle" model="ir.ui.view">
            <field name="name">Ingresar a reparar el Vehículo</field>
            <field name="model">vehicle.repair.w</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
              	<form string="Asistente Ingresar vehículo a reparación">
            	<group colspan="4">
				   <field name="descripcion" required="1" colspan="4"/>
				</group>
              	   <separator  colspan="4" />
		           <button icon="gtk-cancel" special="cancel"
	        			string="Salir" />
				   <button name="vehicle_repair" type="object" icon="gtk-ok" string="Ingresar Reparación" 
						confirm="¿Está seguro que desea ingresar el vehículo al taller para reparación"/>
		         
			  	</form>
            </field>
		</record>  
		
		<record id="view_print_vehicle_resumen" model="ir.ui.view">
            <field name="name">Ingresar a reparar el Vehículo</field>
            <field name="model">vehicle.print.resumen</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
              	<form string="Recorrido Mensual">
				
            	<group colspan="4" string="Recorrido Mensual">
            		<field name="vehicle_id" invisible="1"/>
				   <field name="years" required="1" colspan="2"/>
				   <field name="months" required="1" colspan="2"/>
				</group>
              	   <separator  colspan="4" />
		           <button icon="gtk-cancel" special="cancel"
	        			string="Salir" />
				   <button name="print_report" type="object" icon="gtk-print" string="Imprimir"/>
			  	</form>
            </field>
		</record> 
	  
      
    <record id="action_repair_vehicle" model="ir.actions.act_window">
	           <field name="name">Ingresar a reparar el Vehículo</field>
	           <field name="type">ir.actions.act_window</field>
	           <field name="res_model">vehicle.repair.w</field>
	           <field name="view_type">form</field>
	           <field name="view_mode">form</field>
		       <field name="context">{'record_id' : active_id}</field>
	           <field name="target">new</field>
    	</record>   
    	
    <record id="action_print_vehicle_resumen" model="ir.actions.act_window">
	           <field name="name">Recorrido Mensual</field>
	           <field name="type">ir.actions.act_window</field>
	           <field name="res_model">vehicle.print.resumen</field>
	           <field name="view_type">form</field>
	           <field name="view_mode">form</field>	          
	           <field name="target">new</field>
	           <field name="context">{'view_id':'action_vehicle_inst'}</field>
	           
    	</record> 
    	
    	
    	<record model="ir.values" id="action_print_vehicle_resumen_value">
            <field name="model_id" ref="gt_vehicle.model_vehicle_vehicle" />
            <field name="name">Recorrido Mensual</field>
            <field name="key2">client_print_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_print_vehicle_resumen'))" />
            <field name="key">action</field>
            <field name="model">vehicle.vehicle</field>
        </record>


</data>
</openerp>
