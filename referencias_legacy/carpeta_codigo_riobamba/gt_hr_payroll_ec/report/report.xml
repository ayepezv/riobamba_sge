<!-- ROL GENERAL en excel-->
<record id="view_wizard_export_rol" model="ir.ui.view">
  <field name="name">Exportar Rol</field>
  <field name="model">hr.payroll.export</field>
  <field name="type">form</field>
  <field name="arch" type="xml">
    <form string="Exportar Rol">	 
      <group col="4" colspan="4">
	<label colspan="4" nolabel="1" string="Este wizard le permite exportar el rol de pagos general en una hoja de excel (.xls)"/>
	<field name="datas_fname" colspan="2" invisible="1"/>
	<field name="datas" filename="datas_fname" colspan="2" readonly="1"/>
	<newline/>
	<group col="4" colspan="4">
	  <button name="generar_archivo_rol" string="Generar" colspan="2" type="object" icon="gtk-execute"/>
	  <button special="cancel" string="Cancelar" colspan="2" type="object" icon="gtk-cancel"/>
	</group>
      </group>
    </form>
  </field>
</record>

<act_window
    id="act_export_rol"
    name="Exportar detalle"
    res_model="hr.payroll.export"
    target="new"
    view_mode="form"
    src_model="hr.payslip.run"/>

<record id="view_wizard_verifica_anticipo" model="ir.ui.view">
  <field name="name">Verificar Cuentas de anticipo</field>
  <field name="model">verifica.cta.anticipo</field>
  <field name="type">form</field>
  <field name="arch" type="xml">
    <form string="Verificar">	 
      <group col="4" colspan="4">
	<field name="rubro_id" colspan="4"/>
	<newline/>
	<group col="4" colspan="4">
	  <button name="verificaCta" string="Verificar" colspan="2" type="object" icon="gtk-execute"/>
	  <button name="actualizaCta" string="Actualizar" colspan="2" type="object" icon="gtk-execute"/>
	</group>
	<field name='line_ids'>
	  <tree editable='bottom'>
	    <field name="employee_id" readonly="1"/>
	    <field name="cta_n"/>
	    <field name="cta" readonly="1"/>
	  </tree>
	</field>
      </group>
    </form>
  </field>
</record>

<act_window
    id="act_verifica_anticipo"
    name="Verificar Ctas Anticipo"
    res_model="verifica.cta.anticipo"
    target="new"
    view_mode="form"
    src_model="hr.payslip.run"/>

	</data>
