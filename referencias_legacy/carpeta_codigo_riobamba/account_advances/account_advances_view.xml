    <record id="view_account_advance_supplier_filter" model="ir.ui.view">
      <field name="name">account.advance.supplier</field>
      <field name="model">account.advances</field>
      <field name="type">search</field>
      <field name="arch" type="xml">
	    <search string="Buscar Ingresos - Egresos">
	      <group col='8' colspan='4'>
	        <filter icon="terp-document-new" string="Borrador" domain="[('state','=','draft')]" help="Anticipos en Borrador"/>
	        <filter icon="terp-camera_test" string="Aprobado" domain="[('state','=','posted')]" help="Anticipos Realizados"/>
	        <separator orientation="vertical"/>
	        <field name="date"/>
	        <field name="number"/>
		<field name="manual_number"/>
	        <field name="partner_id" string="Proveedor"/>
	      </group>
	      <newline/>
	      <group col="8" colspan="4">
	        <field name="journal_id" widget="selection" context="{'journal_id': self, 'set_visible':False}" domain="[('type','in',('bank','cash'))]"/>
	        <field name="period_id" groups="base.group_extended"/>
	      </group>
	      <newline/>
	      <group expand="0" string="filtros Extendidos..." col="8" colspan="4">
	        <field name="reference"/>
	        <field name="name"/>
	        <field name="amount"/>
	      </group>
	      <newline/>
	      <group expand="0" string="Agrupar por..." colspan="4" col="10">
	        <filter string="Proveedor" icon="terp-personal" domain="[]" context="{'group_by':'partner_id'}"/>
	        <filter string="Diario" icon="terp-folder-orange" domain="[]" context="{'group_by':'journal_id'}"/>
	        <filter string="Periodo" icon="terp-go-month" domain="[]" context="{'group_by':'period_id','visible':True}"/>
	        <filter string="Estado" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'state'}"/>
	      </group>
	    </search>
      </field>
    </record>



    <record model="ir.ui.view" id="view_account_advance_supp_form">
      <field name="name">account.advance.supplier.form</field>
      <field name="model">account.voucher</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Egresos">
          <group col="4" colspan="4">
            <field name="partner_id" required="1" invisible="context.get('line_type', False)"
		   context="{'default_customer': 0, 'search_default_supplier': 1, 'default_supplier': 1}"  string="Proveedor/Beneficiario"/>
            <field name="journal_id"
                   domain="[('type','in',['bank', 'cash'])]"
                   invisible="context.get('line_type', False)"
                   widget="selection" select="1"
                   on_change="onchange_journal(journal_id, line_dr_ids, False, partner_id, date, 0, type, False, context)"
                   string="Payment Method"/>
	    <field name="account_id" invisible="0"/>
            <field name="reference" select="1" required="1"/>
            <field name="date" on_change="onchange_date(date,currency_id,payment_rate_currency_id,amount,company_id,context)"/>
            <field name="amount"/> 
            <field name="type" required="1" invisible="1"/>
            <field name="pre_line" invisible="1"/>
            <field name="currency_id" invisible="1" colspan="4"/>
            <field name="company_id" widget="selection" groups="base.group_multi_company"/>
          </group>
          <notebook colspan="4">
            <page string="Detalle de Comprobante">
              <field name="line_dr_ids"
                     context="{'journal_id':journal_id, 'type':type, 'partner_id':partner_id, 'default_amount': amount, 'default_name': reference}"
                     colspan="4" nolabel="1" height="140">              
                <tree string="Detalle" editable="bottom">
                  <field name="account_id" domain="[('type','not in',['view','consolidation'])]"/>
                  <field name="name" string="Descripci贸n"/>
                  <field name="amount" sum="Total" default_get="{'amount':amount}"/>
                  <field name="type" invisible="1" default_get="{'type':'dr'}"/>
                </tree>
		<form string="Detalle">
		  <field name="account_id"/>
		  <field name="account_analytic_id"/>
		  <field name="name"/>
		  <field name="amount"/>
		</form>
              </field>
              <group col="2" colspan="3">
                <separator string="Notas" colspan="2"/>
                <field name="narration" colspan="2" nolabel="1" required="1"/>
              </group>
              <group col="2" colspan="1">
                <group col="2" colspan="1">
                  <separator string="Otra Informaci贸n" colspan="2"/>
                  <field name="number"/>
                </group>
              </group>
            </page>
            <page string="Detalle Contable" groups="base.group_extended" attrs="{'invisible': [('state','!=','posted')]}">
              <group col="6" colspan="4">
                <field name="period_id"/>
              </group>
              <field name="move_ids" colspan="4" nolabel="1" readonly="1">
                <tree string="Detalle de Asiento">
                  <field name="move_id"/>
                  <field name="ref"/>
                  <field name="date"/>
                  <field name="partner_id"/>
                  <field name="account_id"/>
                  <field name="name" string="Detalle"/>
                  <field name="debit"/>
                  <field name="credit"/>
                  <field name="state"/>
                  <field name="reconcile_id"/>
                </tree>
              </field> 
            </page>
          </notebook>
          <field name="payment_rate_currency_id" groups="base.group_extended" colspan="1" nolabel="1" 
		 on_change="onchange_payment_rate_currency(currency_id, payment_rate, payment_rate_currency_id, date, amount, company_id, context)" invisible="1"/>
          <group col="10" colspan="4">
            <field name="state" widget="statusbar" statusbar_visible="draft,posted"/>
            <button name="cancel_voucher" string="Cancel" states="draft,proforma"  icon="gtk-cancel"/>
            <button name="cancel_voucher" string="Anular" type="object" states="posted" icon="terp-stock_effects-object-colorize" 
		    confirm="Seguro de deshacer transacci贸n ?"/>
	    <!--button name="%(cobra_anticipo)d" colspan="1" string="Cobrar" 
		    type="action" icon="gtk-execute"/-->
            <button name="proforma_voucher" string="Validar" states="draft" icon="terp-camera_test"/>
            <button name="action_cancel_draft" type="object" states="cancel" string="Set to Draft" icon="terp-stock_effects-object-colorize"/>
            <button name="action_print_report" string="Imprimir Comprobante" states="posted" icon="gtk-print" type="object" context="{'report': 'payment'}"/>
          </group>
        </form>
      </field>
    </record>

    <record id="action_supplier_advance" model="ir.actions.act_window">
      <field name="name">Control de Egresos</field>
      <field name="res_model">account.voucher</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form,graph</field>
      <field name="domain">[('journal_id.type','in',['bank','cash']),('type','=','payment'),('extra_type','=','advances')]</field>
      <field name="context">{'type':'payment', 'extra_type': 'advances'}</field>
      <field name="search_view_id" ref="account_voucher.view_voucher_filter_vendor_pay"/>
      <field name="view_id" eval="False"/>
      <field name="target">current</field>
    </record>
    <record id="action_supplier_advance_tree" model="ir.actions.act_window.view">
      <field eval="1" name="sequence"/>
      <field name="view_mode">tree</field>
      <field name="act_window_id" ref="action_supplier_advance"/>
    </record>
    <record id="action_supplier_adv_form" model="ir.actions.act_window.view">
      <field eval="2" name="sequence"/>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_account_advance_supp_form"/>
      <field name="act_window_id" ref="action_supplier_advance"/>
    </record>

    <menuitem action="action_supplier_advance" icon="STOCK_JUSTIFY_FILL" sequence="12"
              id="menu_action_supplier_advance"  parent="menu_finance_advances" groups="account.group_account_invoice"/>

<!--	   Anticipo Clientes-->
	  
        <record model="ir.ui.view" id="view_account_advance_custm_form">
            <field name="name">account.advance.customer.form</field>
            <field name="model">account.voucher</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Registro de Ingreso">
                    <group col="4" colspan="4">
                      <field name="partner_id" required="1" invisible="context.get('line_type', False)" string="Customer" context="{'search_default_customer': 1}"/>
                        <field name="currency_id" invisible="1"/>                      
                        <field name="journal_id"
                            domain="[('type','in',['bank', 'cash'])]"
                            invisible="context.get('line_type', False)"
                            widget="selection" select="1"
                            on_change="onchange_journal(journal_id, line_cr_ids, False, partner_id, date, amount, type, company_id, context)"
                            string="Payment Method"/>
			            <field name="account_id" invisible="0"/>
                        <field name="certificate_id" invisible="1" domain="[('partner_id','=',partner_id)]"/>
                        <field name="reference" select="1"/>
                        <field name="date" on_change="onchange_date(date,currency_id,payment_rate_currency_id,amount,company_id,context)"/>
                        <field name="type" required="1" invisible="1"/>
                        <field name="amount"/>
                        <field name="pre_line" invisible="1"/>
                        <field name="currency_id" invisible="1" colspan="4"/>
                        <field name="company_id" widget="selection" groups="base.group_multi_company"/>
                    </group>
                    <notebook colspan="4">
                        <page string="Detalle de Comprobante">
                          <field name="line_cr_ids" 
				 context="{'journal_id':journal_id, 'type':type, 'partner_id':partner_id, 'default_name': reference, 'default_amount': amount, 'default_name': reference}" 
				 colspan="4" nolabel="1" height="140" 
				 on_change="onchange_line_ids(line_dr_ids, line_cr_ids, amount, currency_id, context)">
                            <tree string="Detalle" editable="bottom">
                              <field name="account_id" domain="[('type','not in',['view','consolidation'])]"/>
                              <field name="name"/>
                              <field name="budget_id" invisible="1" domain="[('certificate_id','=',parent.certificate_id)]"/>
                              <field name="amount" sum="Total"/>
                              <field name="type" invisible="1" default_get="{'type':'cr'}"/>
                            </tree>
			    <form string="Detalle">
			      <field name="account_id"/>
			      <field name="name"/>
			      <field name="amount"/>
			    </form>
                          </field>
                          <group col="2" colspan="3">
                            <separator string="Notas" colspan="2"/>
                            <field name="narration" colspan="2" nolabel="1"/>
                          </group>
                          <group col="2" colspan="1">
                            <group col="2" colspan="1">
                              <separator string="Otra Informaci贸n" colspan="2"/>
                              <field name="number"/>
                            </group>
                          </group>
                        </page>
                        <page string="Detalle Contable" groups="base.group_extended" attrs="{'invisible': [('state','!=','posted')]}">
                            <group col="6" colspan="4">
                              <field name="period_id"/>
                            </group>
                            <field name="move_ids" colspan="4" nolabel="1" readonly="1">
                              <tree string="Detalle de Asiento">
                                <field name="move_id"/>
                                <field name="ref"/>
                                <field name="date"/>
                                <field name="partner_id"/>
                                <field name="account_id"/>
                                <field name="name" string="Detalle"/>
                                <field name="debit"/>
                                <field name="credit"/>
                                <field name="state"/>
                                <field name="reconcile_id"/>
                              </tree>
                            </field> 
                        </page>
                    </notebook>
                    <field name="payment_rate_currency_id" groups="base.group_extended" colspan="1" nolabel="1" on_change="onchange_payment_rate_currency(currency_id, payment_rate, payment_rate_currency_id, date, amount, company_id, context)" invisible="1"/>
                    <group col="10" colspan="4">
                      <field name="state" widget="statusbar" statusbar_visible="draft,posted" statusbar_colors='{"proforma":"blue"}'/>
                      <button name="cancel_voucher" string="Cancel" states="draft,proforma"  icon="gtk-cancel" invisible="context.get('line_type', False)"/>
                      <button name="cancel_voucher" string="Anular" type="object" states="posted" invisible="context.get('line_type', False)" icon="terp-stock_effects-object-colorize" confirm="Are you sure to unreconcile and cancel this record ?"/>
                      <button name="action_cancel_draft" type="object" states="cancel" string="Set to Draft" icon="terp-stock_effects-object-colorize" invisible="context.get('line_type', False)"/>
                      <button name="proforma_voucher" string="Validate" states="draft" icon="gtk-go-forward" invisible="context.get('line_type', False)"/>
                      <button name="action_print_report" string="Imprimir Comprobante" states="posted" icon="gtk-print" type="object" context="{'report': 'account.advances'}"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_customer_advance" model="ir.actions.act_window">
            <field name="name">Control de Ingresos</field>
            <field name="res_model">account.voucher</field>
            <field name="view_type">form</field>
	        <field name="view_mode">tree,form,graph</field>
            <field name="domain">[('journal_id.type','in',['bank','cash']),('extra_type','=','advances_custom'),('type','=','receipt')]</field>
            <field name="context">{'type':'receipt', 'extra_type': 'advances_custom'}</field>
            <field name="search_view_id" ref="account_voucher.view_voucher_filter_customer_pay"/>
            <field name="view_id" eval="False"/>
            <field name="target">current</field>
        </record>
        <record id="action_customer_advance_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="act_window_id" ref="action_customer_advance"/>
        </record>
        <record id="action_customer_adv_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_account_advance_custm_form"/>
            <field name="act_window_id" ref="action_customer_advance"/>
        </record>

        <menuitem action="action_customer_advance" icon="STOCK_JUSTIFY_FILL" sequence="12"
            id="menu_action_customer_advance"  parent="menu_finance_advances" 
	    groups="account.group_account_invoice"/>
	

  </data>
</openerp>
