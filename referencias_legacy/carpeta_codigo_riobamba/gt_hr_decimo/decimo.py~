__author__ = 'Mario Chogllo'

import time
import logging

from osv import osv, fields

class hrDecimoTercer(osv.Model):
    _name = 'hr.decimo.tercer'
    _columns = dict(
        name = fields.many2one('hr.work.period','Año Laboral',required=True),
        date_start = fields.date('Fecha Desde',required=True),
        date_end = fields.date('Fecha Hasta',required=True),
        state = fields.selection([('Borrador','Borrador'),('Terminado','Terminado')],'Estado'),
        )
    _defaults = dict(
        state = 'Borrador'
        )
hrDecimoTercer


class hrDecimoCuarto(osv.Model):
    _name = 'hr.decimo.cuarto'
    _columns = dict(
        name = fields.many2one('hr.work.period','Año Laboral',required=True),
        date_start = fields.date('Fecha Desde',required=True),
        date_end = fields.date('Fecha Hasta',required=True),
        state = fields.selection([('Borrador','Borrador'),('Terminado','Terminado')],'Estado'),
        )
    _defaults = dict(
        state = 'Borrador'
        )
hrDecimoCuarto
