    <record model="ir.ui.view" id="view_regla_cierre_form1">
      <field name="name">regla.cierre.view.form</field>
      <field name="model">regla.cierre</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
  	<form>
	  <field name="name" required="1" colspan="2"/>
	  <!--field name="detallado" colspan="2"/-->
	  <group colspan="4" string='Detalle'>
	    <field name="tipo_origen" colspan="2" required="1"/>
	    <!--field name="tipo_destino" colspan="2" required="1"/-->
	    <field name="fiscal_id"/>
	    <!--field name="date_start"/>
		<field name="date_end"/-->
	    <field name="origen" colspan="2"/>
	    <field name="destino_account" colspan="2"/>
	    <button icon="gtk-execute" string="Cargar Cuentas Cierre" colspan="2" name="loadCuentasCierre" type="object"/>
	    <button icon="gtk-execute" string="Generar Asiento Cierre" colspan="2" name="generaAsientoCierre" type="object"/>
	    <notebook colspan="4">
	      <page string="Detalle">
		<field name="origen_ids" nolabel="1">
		  <tree editable="bottom">
		    <field name="origen_id" required="1" domain="[('type','!=','view')]"/>
		    <field name="destino_id" required="1" domain="[('type','!=','view')]"/>
		  </tree>
		</field>
	      </page>
	    </notebook>
	  </group>
	</form>
      </field>
    </record>
    
