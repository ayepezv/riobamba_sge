<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    <record id="view_doc_expedient_draft" model="ir.ui.view">
            <field name="name">Draft_Expedient_Form</field>
            <field name="model">doc_expedient.draft</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="DRaft Expedient">
                    <separator colspan="6" string="Ingrese los siguientes campos.."/>
                    <newline/>
                    <field name="expedient_id" readonly="True" invisible="1"/>
                    <field name="user_id"/>
                    <field name="name"/>
                    <newline/>
                    <separator string="Resumen" colspan="6"/>
                    <field name="resumen" nolabel="1" colspan="6"/>
                    
                    <group col="2" colspan="4">
                        <button icon="gtk-cancel" special="cancel" string="Cerrar"/>
                        <button icon="gtk-apply" name="draft_expedient" string="Aplicar" type="object" default_focus="1"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_doc_expedient_draft" model="ir.actions.act_window">
            <field name="name"> Cambio a borrador de un tr√°mite</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">doc_expedient.draft</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
 </data>
</openerp>
