<openerp>
    <data>
		<!--EXPEDIENT_EXPEDIENT WORKFLOW--> 
        <record id="wkf_doc_expedient_expedient" model="workflow">
            <field name="name">Doc Expedient Basic Workflow</field>
            <field name="osv">doc_expedient.expedient</field>
            <field name="on_create">True</field>
        </record>

        <record id="act_draft" model="workflow.activity">
            <field name="wkf_id" ref="wkf_doc_expedient_expedient"/>
            <field name="flow_start">True</field>
            <field name="name">draft</field>
            <!--field name="kind">function</field>
            <field name="action">action_removed_draft()</field-->
        </record>
        
  	    <record id="act_created" model="workflow.activity">
            <field name="wkf_id" ref="wkf_doc_expedient_expedient"/>
            <field name="name">created</field>
            <field name="kind">function</field>
            <field name="split_mode">OR</field>
            <field name="action">action_draft_created()</field>
        </record>
        
        <!--record id="act_cancelled" model="workflow.activity">
            <field name="wkf_id" ref="wkf_doc_expedient_expedient"/>
            <field name="name">draft_cancelled</field>
            <field name="flow_stop">True</field>
            <field name="kind">function</field>
            <field name="action">action_draft_cancelled()</field>
        </record>
        
        <record id="act_created_cancelled" model="workflow.activity">
            <field name="wkf_id" ref="wkf_doc_expedient_expedient"/>
            <field name="name">created_cancelled</field>
            <field name="flow_stop">True</field>
            <field name="kind">function</field>
            <field name="action">action_created_cancelled()</field>
        </record-->
        
        <record id="act_cancelled" model="workflow.activity">
            <field name="wkf_id" ref="wkf_doc_expedient_expedient"/>
            <field name="name">cancelled</field>
            <field name="flow_stop">True</field>
            <field name="kind">function</field>
            <field name="action">action_draft_cancelled()</field>
        </record>

        
        <record id="act_removed" model="workflow.activity">
            <field name="wkf_id" ref="wkf_doc_expedient_expedient"/>
            <field name="name">removed</field>
            <field name="flow_stop">True</field>
            <field name="kind">function</field>
            <field name="action">action_created_removed()</field>
        </record>
        
        <!--record id="act_draft2" model="workflow.activity">
            <field name="wkf_id" ref="wkf_doc_expedient_expedient"/>
            <field name="name">draft2</field>
            <field name="flow_start">True</field>
            <field name="kind">function</field>
            <field name="action">action_removed_draft()</field>
        </record-->
        
        <record id="trans_draft_created" model="workflow.transition">
            <field name="act_from" ref="act_draft"/>
            <field name="act_to" ref="act_created"/>
            <field name="signal">wkf_draft_created</field>
        </record>
        
        <record id="trans_draft_cancelled" model="workflow.transition">
            <field name="act_from" ref="act_draft"/>
            <field name="act_to" ref="act_cancelled"/>
            <field name="signal">wkf_draft_cancelled</field>
        </record>
        
        <record id="trans_created_cancelled" model="workflow.transition">
            <field name="act_from" ref="act_created"/>
            <field name="act_to" ref="act_cancelled"/>
            <field name="signal">wkf_created_cancelled</field>
        </record>
        
        <record id="trans_created_removed" model="workflow.transition">
            <field name="act_from" ref="act_created"/>
            <field name="act_to" ref="act_removed"/>
            <field name="signal">wkf_created_removed</field>
        </record>
        
        <!--record id="trans_removed_draft" model="workflow.transition">
            <field name="act_from" ref="act_removed"/>
            <field name="act_to" ref="act_draft"/>
            <field name="signal">wkf_removed_draft</field>
        </record-->
        
        
        <!--EXPEDIENT_EXPEDIENT USER_TASK--> 
        
        <record id="wkf_doc_expedient_task" model="workflow">
            <field name="name">Doc Expedient Task Workflow</field>
            <field name="osv">doc_expedient.task</field>
            <field name="on_create">True</field>
        </record>

        <record id="act_draft_task" model="workflow.activity">
            <field name="wkf_id" ref="wkf_doc_expedient_task"/>
            <field name="flow_start">True</field>
            <field name="name">draft</field>
        </record>
        
        <record id="act_progress_task" model="workflow.activity">
            <field name="wkf_id" ref="wkf_doc_expedient_task"/>
            <field name="name">progress</field>
            <field name="kind">function</field>
            <field name="action">action_draft_progress()</field>
        </record>
        
        <record id="act_done_task" model="workflow.activity">
            <field name="wkf_id" ref="wkf_doc_expedient_task"/>
            <field name="name">done</field>
            <field name="kind">function</field>
            <field name="action">action_progress_done()</field>
        </record>
        
        <record id="act_cancelled_task" model="workflow.activity">
            <field name="wkf_id" ref="wkf_doc_expedient_task"/>
            <field name="name">cancelled</field>
            <field name="flow_stop">True</field>
            <field name="kind">function</field>
            <field name="action">action_done_cancelled()</field>
        </record>
        
        <record id="trans_draft_progress_task" model="workflow.transition">
            <field name="act_from" ref="act_draft_task"/>
            <field name="act_to" ref="act_progress_task"/>
            <field name="signal">wkf_draft_progress</field>
        </record>
        
        <record id="trans_progress_done_task" model="workflow.transition">
            <field name="act_from" ref="act_progress_task"/>
            <field name="act_to" ref="act_done_task"/>
            <field name="signal">wkf_progress_done</field>
        </record>
        
        <record id="trans_done_cancelled_task" model="workflow.transition">
            <field name="act_from" ref="act_done_task"/>
            <field name="act_to" ref="act_cancelled_task"/>
            <field name="signal">wkf_done_cancelled</field>
        </record>
        
	</data>
</openerp>
