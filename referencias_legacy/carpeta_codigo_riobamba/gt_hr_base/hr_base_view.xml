<record model="ir.ui.view" id="view_hr_job_form_modified">
  <field name="name">hr.job.modified.form</field>
  <field name="model">hr.job</field>
  <field name="type">form</field>
  <field name="inherit_id" ref="hr.view_hr_job_form"/>
  <field name="arch" type="xml">
    <xpath expr="/form/group/field[@name='name']" position="replace">
      <field name="name" colspan="6" required="1"/>
    </xpath>
    <xpath expr="/form/group/field[@name='department_id']" position="replace">
      <field name="department_id" colspan="6" required="1"/>
      <field name="budget_id" colspan="3"/>
      <field name="grupo_id" colspan="3"/>
    </xpath>
    <xpath expr="/form/group/field[@name='company_id']" position="replace">
      <field name="company_id" widget="selection" groups="base.group_multi_company" invisible="1"/>
      
    </xpath>
    <xpath expr="/form/notebook/page[@string='Description']/separator[@string='Job Description']" position="replace">
      <separator colspan="4" string="Descripción del trabajo"/>
    </xpath>
    <xpath expr="/form/notebook/page[@string='Description']/separator[@string='Requirements']" position="replace">
      <separator colspan="4" string="Requerimientos"/>
    </xpath>
    <xpath expr="/form/notebook/page[@string='Employees']" position="replace">
      <page string="Empleados">
        <field name="employee_ids" colspan="4" nolabel="1" widget="many2many" mode="tree,form"/>
      </page>
    </xpath>
  </field>
</record>

