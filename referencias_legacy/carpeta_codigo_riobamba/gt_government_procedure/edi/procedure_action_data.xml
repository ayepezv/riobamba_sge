<?xml version="1.0" ?>
<openerp>
    <data>

        <!-- EDI Export + Send email Action  -->
        <record id="ir_actions_server_edi_procedure" model="ir.actions.server">
            <field name="code">object.edi_export_and_email(template_ext_id='gt_government_procedure.email_template_edi_procedure', context=context)</field>
            <field eval="7" name="sequence"/>
            <field name="state">code</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="gt_government_procedure.model_purchase_public_process"/>
            <field name="condition">True</field>
            <field name="name">Auto-email state change public process</field>
        </record>

        <!-- EDI related Email Templates menu -->
        <record model="ir.actions.act_window" id="action_email_templates_procedure">
            <field name="name">Plantilla Mail</field>
            <field name="res_model">email.template</field>
            <field name="view_type">tree</field>
            <field name="view_mode">form,tree</field>
            <!--field name="view_id" ref="email_template.email_template_tree" />
            <field name="search_view_id" ref="email_template.view_email_template_search"/>
            <field name="context">{'search_default_model_id':'purchase.public.process'}</field>
            <field name="context" eval="{'search_default_model_id': ref('account.model_account_invoice')}"/-->
        </record>

        <!--menuitem id="menu_email_templates_procedure" parent="menu_purchase_process_config" 
				  action="action_email_templates_procedure" sequence="6"/-->

    </data>

    <!-- Mail template and workflow bindings are done in a NOUPDATE block
         so users can freely customize/delete them -->
    <data noupdate="1">

      <!--Email template -->
      <record id="email_template_edi_procedure" model="email.template">
        <field name="name">Notificacion automatica de cambio de estado</field>
        <field name="email_from">${object.user_id.user_email or 'noreply@localhost'}</field>
        <field name="subject">Proceso de compras publicas (Codigo ${object.code or 'n/a' })</field>
        <field name="email_to">${object.user_id.user_email or ''}</field>
        <field name="model_id" ref="gt_government_procedure.model_purchase_public_process"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html"><![CDATA[
<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: rgb(255, 255, 255); ">
  
  <p>Estimado:${object.user_id.name and ' ' or ''},</p>
  
  <p>El estado del procesdo de contratacion publica${object.code}, ha pasado </p>
    
    <p style="border-left: 1px solid #8e0000; margin-left: 30px;">
       &nbsp;&nbsp;<strong>NOTIFICACION DE CAMBIO</strong><br />
       &nbsp;&nbsp;Codigo Proceso: <strong>${object.code}</strong><br />
       &nbsp;&nbsp;Estado: ${object.state.name}<br />
    </p>  
</div>
]]></field>
        </record>
    </data>
</openerp>
